/* components/blog-card/blog-card.wxss */
page{
    background-color: #f1f1f1;
}
.container {
    padding: 20rpx;
    width: 100%;
    background-color: #fff;
}

.header {
    display: flex;

}

.avator {
    display: flex;
    align-items: center;
    justify-items: center;
    margin-right: 20rpx;
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
}

.left-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    font-size: 25rpx;
    font-weight: 500;
}
.content{
    margin: 20rpx 0;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 1.5;
}
.image-list {
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
}

.image-wrap {
    width: 220rpx;
    height: 220rpx;
     margin-right: 10rpx;
    margin-bottom: 10rpx;
   position: relative;
    overflow: hidden;
    text-align: center;
}
.image-list .image-wrap:nth-child(3n) {
    margin-right: 0;
}