/* components/blog-ctrl/blog-ctrl.wxss */
.commentPlugs {
    display: flex;
    background-color: #fff;
    flex: space-around;
}

.commentPlug {
    display: flex;
    flex: 1;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    color: rgba(40, 47, 60, 0.8);
    height: 60rpx;
    text-align: center;
}
.commentIcon{
    margin-top: 10rpx;
    margin-right: 10rpx;
    font-size: 32rpx;
}
.commentText {
    font-size: 32rpx;
}

.model {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 99;
    text-align: center;
    background: rgba(0, 0, 0, 0.6);
}

.panel {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 300rpx;
    background-color: #f8f8f8;
}

#icon-shanchu1 {
    position: absolute;
    right: 10rpx;
    top: 10rpx;
    padding: 20rpx;
}
.ctrl-item text {
    font-size: 32rpx;
}

.comment-content {
    width: 560rpx;
    text-align: left;
    padding: 20rpx;
    font-size: 32rpx;
}

.send {
    background: #d43c33;
    color: #fff;
    font-size: 24rpx;
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
}